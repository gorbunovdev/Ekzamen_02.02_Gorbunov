<Window x:Class="_02._02_Gorbunov_13Bilet.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Калькулятор телефонных разговоров" 
        Height="611" Width="500"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Клиент и минуты -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <Label Content="ФИО клиента:" FontWeight="Bold"/>
            <TextBox x:Name="txtClientName" Height="25" Margin="0,5"
                     PreviewTextInput="TxtClientName_PreviewTextInput"/>

            <Label Content="Количество минут:" FontWeight="Bold" Margin="0,10,0,0"/>
            <TextBox x:Name="txtMinutes" Height="25" Margin="0,5"
                     PreviewTextInput="TxtMinutes_PreviewTextInput"/>
        </StackPanel>

        <!-- Выбор тарифа -->
        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <Label Content="Выберите тариф:" FontWeight="Bold"/>
            <ComboBox x:Name="cmbTariff" Height="25" Margin="0,5">
                <ComboBoxItem Content="Тариф 1 (до 200 мин)"/>
                <ComboBoxItem Content="Тариф 2 (до 100 мин)"/>
            </ComboBox>
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
            <Button x:Name="btnCalculate" Content="Рассчитать" 
                    Width="200" Height="30" Margin="0,0,10,0"
                    Background="LightBlue" Click="BtnCalculate_Click"/>
            <Button x:Name="btnGenerateReceipt" Content="Сформировать квитанцию" 
                    Width="200" Height="30" Margin="0,0,10,0"
                    Background="LightGreen" Click="BtnGenerateReceipt_Click"/>
        </StackPanel>

        <!-- Результаты -->
        <StackPanel Grid.Row="3" Margin="0,0,0,10">
            <Label Content="Результаты расчета:" FontWeight="Bold"/>
            <TextBox x:Name="txtResult" Height="100" Margin="0,5"
                     IsReadOnly="True" TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"/>
        </StackPanel>

    </Grid>
</Window>